<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".While">

    <!-- ปุ่มย้อนกลับ -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:drawableLeft="@android:drawable/ic_media_previous"
        android:layout_gravity="center"
        android:text="Back" />

    <!-- CardView สำหรับหัวข้อ -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="98dp"
        app:cardBackgroundColor="#FFE872"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp" >

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/while_loop"
            android:textSize="18sp"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>

    <!-- คำอธิบายเกี่ยวกับ while loop -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/while_while_loop_javascript"
        android:textSize="16sp"
        android:padding="8dp"/>

    <!-- ตัวอย่างคำสั่ง while -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/while_condition_n_statements_n"
        android:textSize="14sp"
        android:padding="8dp"/>

    <!-- อธิบายลูป while -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/while_loop_condition"
        android:textSize="14sp"
        android:padding="8dp"/>

    <!-- อธิบายการใช้งานลูป while -->

    <!-- ตัวอย่างโค้ด while.js -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/while_loop_1_10"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text='@string/while_js_n_let_i_1_n_while_i_lt_10_n_console_log_i_n_i_n_n_console_log_loop_ended' />


    <!-- ปุ่ม Run -->
    <Button
        android:id="@+id/btnRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/run"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <!-- ผลลัพธ์จากการรัน -->
    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <!-- คำอธิบายเพิ่มเติม -->
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_10_while_loop"
        android:textSize="14sp"
        android:padding="8dp"/>

    <!-- อธิบายการประกาศตัวแปร -->
    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/let_i_1"
        android:textSize="14sp"
        android:padding="8dp"/>

    <!-- อธิบายเงื่อนไขของลูป -->
    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i_1_while"
        android:textSize="14sp"
        android:padding="8dp"/>

    <!-- อธิบายคำสั่ง while -->
    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/while_i_10_n_console_log_i_n_i_n"
        android:textSize="14sp"
        android:padding="8dp"/>

    <!-- อธิบายการทำงานของลูป -->
    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:padding="8dp"
        android:text="@string/i_10_1_2_3_4_5_11"
        android:textSize="14sp" />

</LinearLayout>
</ScrollView>